# directories
HPC_HOME_DIR=/home/FCAM/crbmapi
HPC_BASE_DIR=/home/FCAM/crbmapi/nfs/biosimulations/dev/simulations

# executables
HPC_EXECUTABLES_PATH="PATH=$PATH"

# modules
HPC_MODULE_PATH=/isg/shared/modulefiles
HPC_MODULE_INIT_SCRIPT=/usr/share/Modules/init/bash

# hardware requirements
HPC_SLURM_CONSTRAINTS=SSE42

# SLURM partition
HPC_SLURM_PARTITION=crbm
HPC_SLURM_QOS=general

# Singularity settings
HPC_SINGULARITY_MODULE=singularity/3.9.2
HPC_SINGULARITY_CACHE_DIR=/home/FCAM/crbmapi/singularity/cache/
HPC_SINGULARITY_PULL_FOLDER=/home/FCAM/crbmapi/singularity/images/

# Settings for jobs for building Singularity images
HPC_BUILD_SINGULARITY_IMAGE_MAX_TIME=90:00
HPC_BUILD_SINGULARITY_IMAGE_CPUS=8
HPC_BUILD_SINGULARITY_IMAGE_MEMORY=16G
